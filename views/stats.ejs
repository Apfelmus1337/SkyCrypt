            <div class="skill-progress-text">
                <%= formatNumber(level.xpCurrent, true) %><% if(level.xpForNext != Infinity){ %> / <%= formatNumber(level.xpForNext) %><% } %> XP
            </div>
        </div>
    </div>
<% } %>

